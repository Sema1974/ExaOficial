<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VidalMainActivity"
    android:paddingHorizontal="24dp"
    android:paddingVertical="24dp"
    android:background="@color/black">
    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CharApp"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/titulo"
        android:background="@color/tarno"/>
    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:text="@string/name2"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/charname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Character name"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:background="@color/tarno"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card2"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/black"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/yuanti"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:foregroundGravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/card1"
        app:layout_constraintEnd_toStartOf="@+id/card3"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/black"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/orc"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:foregroundGravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/card2"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/tarsi"
        android:foregroundGravity="center"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/tiefling"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:foregroundGravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power:  "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/numRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/tvRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:contentDescription="pow"
            android:stepSize="5"
            android:valueFrom = "50"
            android:valueTo = "100"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_add_reaction_24"
        android:backgroundTint="@color/fab"
        android:layout_margin="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>